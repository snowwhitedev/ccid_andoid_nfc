<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top|center"
            android:layout_margin="10dp"
            android:src="@drawable/logo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:paddingTop="5dp">
        <LinearLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_weight="0.1"
            android:padding="10dp">
            <TextView
                android:id="@+id/res_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message: "/>
            <TextView
                android:id="@+id/res_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm: "/>
            <TextView
                android:id="@+id/res_facility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facility: "/>
            <TextView
                android:id="@+id/res_depart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department: "/>
            <TextView
                android:id="@+id/res_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floor:  "/>
            <TextView
                android:id="@+id/res_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room: "/>
            <TextView
                android:id="@+id/res_bed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bed: "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/room_img"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/room" />
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_weight="0.0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patients:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/res_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <HorizontalScrollView
            android:id="@+id/hscrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0.1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:paddingVertical="0dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/logo_margin"
                    android:src="@drawable/patient1"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/logo_margin"
                    android:src="@drawable/patient2" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/logo_margin"
                    android:src="@drawable/patient1"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>